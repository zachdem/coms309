<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/chat_button"
        android:layout_width="136dp"
        android:layout_height="67dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-black"
        android:text="@string/Chat"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cy_image"
        android:layout_width="75dp"
        android:layout_height="81dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="616dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cyrun" />

    <TextView
        android:id="@+id/cyrun_homepage_text"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="616dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/CyRUN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="271dp"
        android:layout_height="78dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="386dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-black"
        android:text="Place an Order"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hungry_text"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="477dp"
        android:fontFamily="sans-serif-black"
        android:text="Hungry?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>